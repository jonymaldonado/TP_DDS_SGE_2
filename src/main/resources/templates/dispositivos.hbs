{{#partial "contenido"}}

<div class="container">
  <h2>Lista de Dispositivos</h2>          
  <table class="table table-bordered">
    <thead>
      <tr>
      	<th>Nombre Dispositivo</th>
        <th>Estado Dispositivo</th>
      </tr>
    </thead>
    <tbody>
    {{#each lista}}
    	<tr>
    	<td>{{nombre}}</td>
        {{#if estadoDispositivo}}
		<td>Encendido</td>
		{{else}}
		<td>Apagado</td>
		{{/if}}
		</tr>
     {{/each}}
    </tbody>
  </table>
</div>
	
{{/partial}}
{{>base.hbs}}